#browse_title
  %h2 Browse

#browse_content
  %table.table
    %tr
    %th= sort_link @q, :formatted_name, {}, :method => action_name == 'advanced_search' ? :post : :get
    %th= sort_link @q, :company, {}, :method => action_name == 'advanced_search' ? :post : :get
    %th= sort_link @q, :skill, {}, :method => action_name == 'advanced_search' ? :post : :get
    - @users.each do |user|
      %tr
        %td= link_to(user.full_profile.user.basic_profile.formatted_name, html_options = {:action => 'show', :id => current_user.id})
        %td= user.full_profile.positions.first.company
        %td
          - user.full_profile.skills.each do |skill|
            = skill[:skill] + ','
