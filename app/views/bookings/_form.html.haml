= form_for @booking do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:"
      %ul
        - @booking.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :booking_slot
    = f.text_field :booking_slot
  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :other
    = f.text_field :other
  .actions
    = f.submit 'Save'
