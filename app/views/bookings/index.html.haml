%h1 Listing bookings

%table
  %tr
    %th User
    %th Booking slot
    %th Date
    %th Other
    %th
    %th
    %th

  - @bookings.each do |booking|
    %tr
      %td= booking.user_id
      %td= booking.slot
      %td= booking.date
      %td= booking.room
      %td= link_to 'Show', booking
      %td= link_to 'Edit', edit_booking_path(booking)
      %td= link_to 'Destroy', booking, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

